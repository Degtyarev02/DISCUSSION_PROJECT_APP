<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/message_profile_image"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="6dp"
        android:src="@drawable/man_user" />

    <LinearLayout
        android:id="@+id/Receiver_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@+id/message_profile_image"
        android:background="@drawable/receiver_messages_layout"
        android:orientation="vertical">

        <TextView
            android:id="@+id/receiver_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingRight="10dp"
            android:text="@string/receiver_name"
            android:textColor="@color/blackyGray"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/receiver_message_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="200dp"
            android:minWidth="100dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/receiver_messages"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:longClickable="true"/>

        <TextView
            android:id="@+id/receiver_messages_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:paddingStart="30dp"
            android:paddingEnd="10dp"
            android:paddingBottom="3dp"
            android:text="@string/_00_00"
            android:textColor="@color/blackyGray"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/for_receiver_Image_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@+id/message_profile_image"
        android:background="@drawable/receiver_messages_layout"
        android:padding="7dp"
        android:layout_marginBottom="5dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/receiver_image_view_for_any_file"
            android:layout_width="250dp"
            android:layout_height="180dp"
            android:longClickable="true"/>
        <TextView
            android:id="@+id/receiver_image_message_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:paddingStart="30dp"
            android:paddingEnd="10dp"
            android:paddingBottom="3dp"
            android:text="@string/_00_00"
            android:textColor="@color/blackyGray"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/sender_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/sender_messages_layout"
        android:orientation="vertical">

        <TextView
            android:id="@+id/sender_message_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="250dp"
            android:minWidth="100dp"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingRight="10dp"
            android:paddingBottom="2dp"
            android:text="@string/sender_messages"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:adjustViewBounds="true"
            android:longClickable="true"/>

        <TextView
            android:id="@+id/sender_message_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:paddingStart="30dp"
            android:paddingEnd="10dp"
            android:paddingBottom="3dp"
            android:text="@string/_00_00"
            android:textColor="@color/whity_gray"
            android:textSize="12sp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/for_sender_image_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="5dp"
        android:layout_alignParentEnd="true"
        android:background="@drawable/sender_messages_layout"
        android:orientation="vertical"
        android:padding="7dp">

        <ImageView
            android:id="@+id/sender_image_view_for_any_file"
            android:layout_width="250dp"
            android:layout_height="180dp"
            android:padding="5dp"
            android:adjustViewBounds="true"
            android:longClickable="true"/>

        <TextView
            android:id="@+id/sender_image_message_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:paddingStart="30dp"
            android:paddingEnd="10dp"
            android:paddingBottom="3dp"
            android:text="@string/_00_00"
            android:textColor="@color/whity_gray"
            android:textSize="12sp" />
    </LinearLayout>

</RelativeLayout>