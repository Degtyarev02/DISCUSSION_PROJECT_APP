<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/message_profile_image"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="6dp"
        android:src="@drawable/man_user" />

    <LinearLayout
        android:id="@+id/Receiver_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/message_profile_image"
        android:background="@drawable/receiver_messages_layout"
        android:orientation="vertical">

        <TextView
            android:id="@+id/receiver_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="2dp"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingRight="10dp"
            android:text="Receiver Name"
            android:textColor="@color/blackyGray"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/receiver_message_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="200dp"
            android:minWidth="100dp"
            android:layout_below="@+id/receiver_username"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="Receiver Messages"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/receiver_image_view_for_any_file"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="200dp"
            android:maxHeight="150dp"
            android:layout_margin="2dp"
            android:layout_marginLeft="5dp"/>

        <TextView
            android:id="@+id/receiver_messages_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/receiver_username"
            android:layout_gravity="end"
            android:paddingRight="10dp"
            android:paddingLeft="30dp"
            android:paddingBottom="3dp"
            android:text="00:00"
            android:textColor="@color/blackyGray"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/sender_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/sender_messages_layout"
        android:orientation="vertical">

        <TextView
            android:id="@+id/sender_message_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="250dp"
            android:minWidth="100dp"
            android:paddingTop="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="2dp"
            android:text="Sender Messages"
            android:textColor="@color/white"
            android:textSize="15sp"/>

        <ImageView
            android:id="@+id/sender_image_view_for_any_file"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="200dp"
            android:maxHeight="150dp"
            android:layout_margin="2dp"
            android:layout_marginLeft="5dp"/>

        <TextView
            android:id="@+id/sender_message_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/receiver_username"
            android:layout_gravity="end"
            android:paddingRight="10dp"
            android:paddingBottom="3dp"
            android:paddingLeft="30dp"
            android:text="00:00"
            android:textColor="@color/whity_gray"
            android:textSize="12sp" />


    </LinearLayout>

</RelativeLayout>