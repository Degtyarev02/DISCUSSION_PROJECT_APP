<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="5dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/login_image"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:src="@drawable/teamwork"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="25dp"
                app:civ_border_width="5dp"
                app:civ_border_color="@color/DarkGray"/>

            <EditText
                android:id="@+id/login_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/login_image"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/inputs"
                android:drawableLeft="@drawable/envelope"
                android:drawablePadding="5dp"
                android:hint="Email..."
                android:inputType="textEmailAddress"
                android:padding="10dp"
                android:textColorHighlight="#FFEB3B"
                android:textColorLink="#FFC107" />

            <EditText
                android:id="@+id/login_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/login_email"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/inputs"
                android:drawableLeft="@drawable/padlock"
                android:drawablePadding="3dp"
                android:hint="Password..."
                android:inputType="textPassword"
                android:padding="10dp"
                android:textColorHighlight="#FFEB3B"
                android:textColorLink="#FFC107" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Show Password"
                android:layout_below="@+id/login_password"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="55dp"
                android:layout_marginTop="2dp"
                android:textSize="16sp"/>

            <CheckBox
                android:id="@+id/ShowLoginPassword"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:layout_below="@+id/login_password"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="5dp"
                android:buttonTint="@color/DarkGray"
                android:checked="false"
                android:textColorHighlight="#FFFFFF" />

            <TextView
                android:id="@+id/forget_password_link"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/login_password"
                android:text="Forget password?"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="25dp"
                android:layout_centerHorizontal="true"
                android:textSize="16sp"
                android:gravity="end" />

            <Button
                android:id="@+id/login_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/forget_password_link"
                android:padding="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:text="Login"
                android:background="@drawable/round"
                android:backgroundTint="@color/yellow"
                android:textColor="@color/DarkGray"
                android:layout_centerHorizontal="true"
                />

            <TextView
                android:id="@+id/need_new_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/login_button"
                android:text="Create new account"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="25dp"
                android:layout_centerHorizontal="true"
                android:textSize="16sp"
                android:gravity="start" />


            <Button
                android:id="@+id/phone_login_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/need_new_account"
                android:padding="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:text="Login with your phone number"
                android:background="@drawable/round"
                android:textColor="@color/DarkGray"
                android:layout_centerHorizontal="true"
                android:backgroundTint="@color/yellow"
                android:drawableLeft="@drawable/phone"
                />

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>