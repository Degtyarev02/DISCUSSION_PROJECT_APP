<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shadow"

    android:layout_margin="20dp"
    tools:context=".Activities.PhoneLoginActivity">

    <ImageView
        android:id="@+id/phone_login_image"
        android:layout_width="230dp"
        android:layout_height="230dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/phone_object"
        android:layout_marginTop="60dp"/>

    <LinearLayout
        android:id="@+id/phone_login_lin_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phone_login_image"
        android:background="@drawable/shadow_white"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:padding="20dp"
        android:orientation="vertical">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/Phone_number_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/Phone_number_input"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/phone_number"
            android:inputType="phone"
            android:padding="8dp"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/Verification_number_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/Verification_number_input"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Code"
            android:inputType="number"
            android:padding="8dp"/>
    </com.google.android.material.textfield.TextInputLayout>


    <Button
        android:id="@+id/Send_ver_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/round"
        android:backgroundTint="@color/purple_700"
        android:text="Send Code"
        android:textAllCaps="false"
        android:textColor="@color/white" />
    <Button
        android:id="@+id/verify_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Verify"
        android:textColor="@color/purple_700"
        android:background="@drawable/inputs_orange"
        android:textAllCaps="false"/>
    </LinearLayout>

</RelativeLayout>