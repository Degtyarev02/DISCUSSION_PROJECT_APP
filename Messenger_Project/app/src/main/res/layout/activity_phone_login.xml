<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shadow"

    android:layout_marginTop="40dp"
    android:layout_marginBottom="40dp"
    android:layout_marginLeft="40dp"
    android:layout_marginRight="40dp"
    tools:context=".PhoneLoginActivity">

    <EditText
        android:id="@+id/Phone_number_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="180dp"
        android:layout_marginRight="17dp"
        android:gravity="center_horizontal"
        android:hint="Your phone number"
        android:inputType="phone"
        android:padding="8dp" />

    <EditText
        android:id="@+id/Verification_number_input"
        android:layout_below="@+id/Phone_number_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        android:padding="8dp"
        android:hint="Write verification code "
        android:gravity="center"
        />

    <Button
        android:id="@+id/Send_ver_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Verification_number_input"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="80dp"
        android:background="@drawable/round"
        android:backgroundTint="@color/purple_700"
        android:text="Send Code"
        android:textAllCaps="false"
        android:textColor="@color/white" />
    <Button
        android:id="@+id/verify_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Send_ver_code"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="15dp"
        android:layout_marginRight="80dp"
        android:layout_marginLeft="80dp"
        android:text="Verify"
        android:textColor="@color/purple_700"
        android:background="@drawable/inputs_orange"
        android:textAllCaps="false"/>


</RelativeLayout>